<!DOCTYPE html>
<html>
<head>
  <title>MusicInfo</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body ng-app="musicInfo" ng-controller="MusicController">


  <nav>
    <div class="nav-wrapper">
      <a href="#" class="brand-logo center">Music Info</a>  
     <!--  <ul id="nav-mobile" class="left hide-on-med-and-down">
        <li><a href="sass.html">Sass</a></li>
        <li><a href="badges.html">Components</a></li>
        <li><a href="collapsible.html">JavaScript</a></li>
      </ul> -->
    </div>
  </nav><br>

    <div class="row">
     <form class="col s12">
      <div class="row">
        <div class="input-field col s12 offset-m3">
          <input placeholder="Type Artist Name or Song Title" type="text" class="validate" ng-model="name" ng-model-options="{ updateOn: 'blur' }">
          <label for="name"></label>
          <button class="btn waves-effect waves-light s12 m6 offset-m3" type="submit">Search
          </button>
        </div>
       </div>
      </form>
    </div>

   <div class="row">
    <div ng-repeat="music in music" class="col s12 m4">
      <div class="card light-blue darken-4" style="height: 240px">
        <div class="card-content white-text center-align">
          <span class="card-title">{{music.artist.name}}</span>
          <p>Song Title: {{ music.title }}</p>
          <p>Explicit Song? {{ music.explicit_lyrics }}</p>
          <p>Album: {{ music.album.title }}</p>
          <a class="text-color" target="_blank" href="{{ music.preview }}">Preview Song</a>
          <p><img ng-src="{{ music.album.cover_small }}"></p>
        </div>
    <!--     <div class="card-action">
          <a href="#">This is a link</a>
          <a href="#">This is a link</a>
        </div> -->
      </div>
    </div>
  </div>


 

</body>
</html>


         